/**index.wxss**/
.container{
  background-size: cover;
  height: 100%;
}
view{
  width: 100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.userpay,.chooseView{
  width: 100%;
  margin-top: 735rpx;
  margin-top: 690rpx;
}

.payBtn{
  background:rgba(252,111,42,1);
  border-radius:3.25rem;
  font-family:DroidSansFallback;
  color:rgba(255,255,255,1);
  border:none;
  box-shadow:0px 4px 5px #DF510B;
  width:70%;
  height:65rpx;
  line-height:65rpx;
  font-size:14px;
}

.numPayBtn{
  margin-bottom: 6px;
}

.ad{
  position: fixed;
  bottom: 0;
  width:100%;
  height:120rpx;
  background-color:rgba(79,80,82,1);
  opacity:0.08rem;
  background-size: 100rpx;
  background-repeat: no-repeat;
  background-position: 10rpx center;
}

.downloadBtn{
  position: absolute;
  top:35rpx;
  right: 10px;
  width:130rpx;
  height:50rpx;
  background:rgba(255,199,47,1);
  border-radius: 0;
  color: #fff;
  font-size: 20rpx;
  padding: 0 10px;
}

.title{
  color: #fff;
  font-size:  24rpx;
  position: absolute;
  top: 10rpx;
  left: 120rpx;
}

.propagation{
  color: #333;
  font-size:  28rpx;
  position: absolute;
  top: 60rpx;
  left: 120rpx; 
}

.chooseView{
  text-align: center;
}
.chooseBtn{
  width:20%;
  height:80rpx;
  line-height: 80rpx;
  padding: 0;
  background-color: transparent;
  border: none;
  display: inline-block;
  margin-right: 10rpx;
  /* border-radius:3.25rem; */
  background-size: 100%;
  font-size: 30rpx;
  color:#6E2F10;
}
.chooseBtn::after{
  border:none;
}
.chooseBtn text{
  background:rgba(252,111,42,1);
  border-radius:3rem;
  font-family:DroidSansFallback;
  color:rgba(255,255,255,1);
  border:none;
  box-shadow:0px 4px 5px #DF510B;
  width:100%;
  height:80%;
  font-size:14px;
  display: inline-block;
}
button.choseBtn{
  color: #fff;
}
button.choseBtn::after{
  border: none;
  /* border-radius:3rem;
  box-shadow:0px 1.8px 10px #fff inset; */
}

.numInput{
  float: left;
  background: transparent;
  border: 1px solid #FC6F2A;
  border-radius: 15rem;
  padding-left: 2%;
  outline: none;
  color: gray;
  height: 80rpx;
  width: 55%;
  margin-left: 8%;
  margin-right:4%;
  font-size: 14px;
}

.payNowBtn{
  width: 22%;
  height:89rpx;
  line-height: 80rpx;
  padding: 0;
  margin: 0;
  font-size: 28rpx;
  background-color: transparent;
  background-size: 100%;
  border: none;
  color: #fff;
}
.payNowBtn::after{
  border: none;
}
.cover{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.5;
}

.payState{
  position:absolute;
  top:25%;
  left:20%;
  background-size:100%;
  width:12rem;
  height:10.2rem;
  background-repeat:no-repeat;
}
.stateTitle{
  font-size: 32rpx;
  position: absolute;
  left: 36%;
  top: 30%;
}

.stateReason{
  font-size: 20rpx;
  color: #666666;
  position: absolute;
  left: 38%;
  top: 58%;
}

.backToHome{
  height: 1.7rem;
  line-height: 1.7rem;
  width: 8rem;
  background-color: #FC6F2A;
  border-radius: 15rem;
  position: absolute;
  left: 18%;
  top: 70%;
  font-size: 28rpx;
  color: #fff;
}
.closeTips{
  position: absolute;
  background-size: 100%;
  height: 1.6rem;
  width: 1.6rem;
  right: -6%;
  top: 1%;
  border: none;
  background-color: transparent;
}
.closeTips::after{
  border: none;
}