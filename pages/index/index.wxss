/**index.wxss**/
.container{
  background-size: cover;
  height: 100%;
}
view{
  width: 100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.userpay{
  width: 100%;
  margin-top: 735rpx;
}

.payBtn{
  background:rgba(252,111,42,1);
  border-radius:3.25rem;
  font-family:DroidSansFallback;
  color:rgba(255,255,255,1);
  border:none;
  box-shadow:0px 4px 5px #DF510B;
  width:70%;
  height:65rpx;
  line-height:65rpx;
  font-size:14px;
}

.numPayBtn{
  margin-bottom: 6px;
}

.ad{
  position: fixed;
  bottom: 0;
  width:100%;
  height:120rpx;
  background-color:rgba(79,80,82,1);
  opacity:0.08rem;
  background-size: 100rpx;
  background-repeat: no-repeat;
  background-position: 10rpx center;
}

.downloadBtn{
  position: absolute;
  top:35rpx;
  right: 10px;
  width:130rpx;
  height:50rpx;
  background:rgba(255,199,47,1);
  border-radius: 0;
  color: #fff;
  font-size: 10px;
  padding: 0 10px;
}

.title{
  color: #fff;
  font-size:  14px;
  position: absolute;
  top: 10rpx;
  left: 120rpx;
}

.propagation{
  color: #333;
  font-size:  16px;
  position: absolute;
  top: 60rpx;
  left: 120rpx; 
}

.chooseView{
  text-align: center;
}
.chooseBtn{
  width:20%;
  height:80rpx;
  line-height: 80rpx;
  padding: 0;
  background: transparent;
  border: none;
  display: inline-block;
  margin-right: 10rpx;
}
.chooseBtn text{
  background:rgba(252,111,42,1);
  border-radius:3.25rem;
  font-family:DroidSansFallback;
  color:rgba(255,255,255,1);
  border:none;
  box-shadow:0px 4px 5px #DF510B;
  width:100%;
  height:80%;
  font-size:14px;
  display: inline-block;
 
}
button.choseBtn::after{
  border: none;
  box-shadow:0px 4px 5px #fff;
}